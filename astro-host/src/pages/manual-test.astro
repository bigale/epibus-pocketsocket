---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Manual Button Test">
  <div class="min-h-screen bg-gray-900 text-white p-8">
    <h1 class="text-3xl font-bold mb-8">Manual Button Test</h1>
    
    <div class="space-y-4">
      <h2 class="text-xl font-bold">Test Individual Character URLs</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Kyoko -->
        <div class="bg-gray-800 p-4 rounded">
          <h3 class="font-bold text-purple-400 mb-2">Kyoko (Port 1881)</h3>
          <button onclick="window.open('http://localhost:1881/', '_blank')" 
                  class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded mr-2">
            Editor
          </button>
          <button onclick="window.open('http://localhost:1881/api/ui/', '_blank')" 
                  class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded">
            Dashboard
          </button>
        </div>
        
        <!-- Byakuya -->
        <div class="bg-gray-800 p-4 rounded">
          <h3 class="font-bold text-yellow-400 mb-2">Byakuya (Port 1882)</h3>
          <button onclick="window.open('http://localhost:1882/', '_blank')" 
                  class="bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded mr-2">
