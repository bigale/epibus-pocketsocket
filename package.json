{
  "name": "@ai-kit/industrial-iot",
  "version": "1.0.0",
  "description": "ðŸ­âš¡ Revolutionary Industrial IoT Platform with Character-Driven Intelligence",
  "type": "module",
  "scripts": {
    "start": "npm run start:kyoko",
    "start:kyoko": "CHARACTER=kyoko npm run dev",
    "start:byakuya": "CHARACTER=byakuya npm run dev", 
    "start:chihiro": "CHARACTER=chihiro npm run dev",
    "start:celestia": "CHARACTER=celestia npm run dev",
    "start:sakura": "CHARACTER=sakura npm run dev",
    "dev": "concurrently \"npm run dev:astro\" \"npm run dev:backend\" \"npm run dev:sockets\"",
    "dev:astro": "cd astro-host && npm run dev",
    "dev:backend": "cd universal-plc-adapter && npm run dev",
    "dev:sockets": "cd pocketsocket-plc && npm run dev",
    "build": "npm run build:astro && npm run build:backend",
    "build:astro": "cd astro-host && npm run build", 
    "build:backend": "cd universal-plc-adapter && npm run build",
    "test": "npm run test:all",
    "test:all": "npm run test:astro && npm run test:backend && npm run test:sockets",
    "test:astro": "cd astro-host && npm test",
    "test:backend": "cd universal-plc-adapter && npm test",
    "test:sockets": "cd pocketsocket-plc && npm test",
    "lint": "eslint . --ext .ts,.js,.astro",
    "format": "prettier --write .",
    "setup": "npm run setup:all",
    "setup:all": "npm run setup:astro && npm run setup:backend && npm run setup:sockets",
    "setup:astro": "cd astro-host && npm install",
    "setup:backend": "cd universal-plc-adapter && npm install", 
    "setup:sockets": "cd pocketsocket-plc && npm install",
    "demo": "npm run demo:kyoko",
    "demo:kyoko": "CHARACTER=kyoko npm run start",
    "demo:full": "npm run start:kyoko & sleep 5 && npm run demo:scenarios"
  },
  "keywords": [
    "industrial-iot",
    "modbus", 
    "plc",
    "ai-kit",
    "character-driven",
    "real-time",
    "astro",
    "suil",
    "automation"
  ],
  "author": "AI-Kit Team",
  "license": "MIT",
  "workspaces": [
    "astro-host",
    "pocketsocket-plc", 
    "universal-plc-adapter",
    "suil-industrial",
    "character-agents"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "pymodbus": "^3.6.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bigale/epibus-pocketsocket.git"
  },
  "bugs": {
    "url": "https://github.com/bigale/epibus-pocketsocket/issues"
  },
  "homepage": "https://github.com/bigale/epibus-pocketsocket#readme",
  "config": {
    "characters": ["kyoko", "byakuya", "chihiro", "celestia", "sakura"],
    "defaultCharacter": "kyoko",
    "industrialPort": 3000,
    "socketPort": 3001,
    "modbusDefaultPort": 502
  }
}
