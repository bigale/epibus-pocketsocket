  "author": "AI-Kit Node-RED Team",
  "license": "MIT",
  "dependencies": {
    "@ai-kit/universal-plc-adapter": "file:../universal-plc-adapter",
    "@ai-kit/character-agents": "file:../character-agents",
    "@ai-kit/suil-industrial": "file:../suil-industrial",
    "node-red": "^4.0.0",
    "node-red-contrib-modbus": "^5.43.0",
    "node-red-dashboard": "^3.6.0",
    "node-red-contrib-ui-level": "^0.1.46",
    "node-red-contrib-buffer-parser": "^3.2.2",
    "node-red-contrib-cron-plus": "^1.5.1",
    "ws": "^8.14.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "eventemitter3": "^5.0.0",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "lodash": "^4.17.21",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.0",
    "@types/ws": "^8.5.0",
    "@types/lodash": "^4.14.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bigale/epibus-pocketsocket.git",
    "directory": "node-red-plc-simulator"
  },
  "config": {
    "nodeRedPorts": {
      "kyoko": 1881,
      "byakuya": 1882,
      "chihiro": 1883,
      "celestia": 1884,
      "sakura": 1885
    },
    "modbusBasePorts": {
      "kyoko": 5020,
      "byakuya": 5021,
      "chihiro": 5022,
      "celestia": 5023,
      "sakura": 5024
    },
    "simulationScenarios": [
      "production_line",
      "hvac_system", 
      "water_treatment",
      "power_generation",
      "manufacturing_cell"
    ]
  }
}
