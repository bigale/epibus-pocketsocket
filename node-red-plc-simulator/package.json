{
  "name": "@ai-kit/node-red-plc-simulator",
  "version": "1.0.0",
  "description": "ðŸŽ›ï¸ Character-driven Node-RED PLC simulators with AI-Kit universal framework integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "npm run start:all-simulators",
    "start:all-simulators": "./scripts/manage-simulators.sh start",
    "start:simulator": "node dist/character-simulator.js",
    "start:manager": "node dist/simulator-manager.js",
    "start:kyoko": "./scripts/manage-simulators.sh start kyoko",
    "start:byakuya": "./scripts/manage-simulators.sh start byakuya",
    "start:chihiro": "./scripts/manage-simulators.sh start chihiro",
    "start:celestia": "./scripts/manage-simulators.sh start celestia",
    "start:sakura": "./scripts/manage-simulators.sh start sakura",
    "stop": "./scripts/manage-simulators.sh stop",
    "stop:kyoko": "./scripts/manage-simulators.sh stop kyoko",
    "stop:byakuya": "./scripts/manage-simulators.sh stop byakuya",
    "stop:chihiro": "./scripts/manage-simulators.sh stop chihiro",
    "stop:celestia": "./scripts/manage-simulators.sh stop celestia",
    "stop:sakura": "./scripts/manage-simulators.sh stop sakura",
    "status": "./scripts/manage-simulators.sh status",
    "health": "./scripts/manage-simulators.sh health",
    "logs": "./scripts/manage-simulators.sh logs",
    "collaborate": "./scripts/manage-simulators.sh collaborate",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:all-simulators\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "setup:flows": "node scripts/setup-character-flows.js",
    "install:nodes": "./scripts/manage-simulators.sh install",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "node-red",
    "plc-simulator", 
    "modbus",
    "ai-kit",
    "character-driven",
    "industrial-iot",
    "simulation",
    "automation",
    "hmi",
    "scada"
